{
  "name": "vite-plugin-cooklang",
  "version": "0.1.0",
  "description": "A Vite plugin for loading Cooklang markup files.",
  "repository": "https://github.com/kauhat/vite-plugin-cooklang",
  "author": "Jack Fletcher",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "vitest dev",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@cooklang/cooklang-ts": "^1.2.3",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5",
    "unbuild": "^1.1.1",
    "vitest": "^0.28.4"
  },
  "peerDependencies": {
    "vite": "^3.0.0 || ^4.0.0"
  }
}
